<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_patient_queue_tree" model="ir.ui.view">
        <field name="name">patient.queue.tree</field>
        <field name="model">patient.queue</field>
        <field name="arch" type="xml">
            <tree string="Patient Queue" decoration-info="state=='waiting'" 
                  decoration-warning="state=='called'" decoration-success="state=='completed'">
                <field name="token_number"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="counter_id"/>
                <field name="position"/>
                <field name="state"/>
                <field name="registration_date"/>
            </tree>
        </field>
    </record>


    <record id="view_patient_queue_form" model="ir.ui.view">
        <field name="name">patient.queue.form</field>
        <field name="model">patient.queue</field>
        <field name="arch" type="xml">
            <form string="Patient Queue">
                <header>
                    <button name="action_call_patient" string="Call Patient" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'waiting')]}"
                            />
                    <button name="action_serve_patient" string="Serve Patient" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'called')]}"
                            />
                    <button name="action_complete" string="Complete" 
                            type="object" class="oe_highlight" 
                            attrs="{'invisible': [('state', '!=', 'serving')]}"
                            />
                    <button name="action_cancel" string="Cancel" 
                            type="object" 
                            attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="waiting,called,serving,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="token_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="counter_id"/>
                            <field name="position"/>
                            <field name="registration_date"/>
                        </group>
                    </group>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>



 <record id="view_patient_queue_search" model="ir.ui.view">
        <field name="name">patient.queue.search</field>
        <field name="model">patient.queue</field>
        <field name="arch" type="xml">
            <search string="Patient Queue">
                <field name="token_number"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="counter_id"/>
                <filter name="waiting" string="Waiting" 
                        domain="[('state', '=', 'waiting')]"/>
                <filter name="called" string="Called" 
                        domain="[('state', '=', 'called')]"/>
                <filter name="serving" string="Being Served" 
                        domain="[('state', '=', 'serving')]"/>
                <filter name="today" string="Today" 
                       />
                <group expand="0" string="Group By">
                    <filter name="group_counter" string="Counter" 
                            context="{'group_by': 'counter_id'}"/>
                    <filter name="group_state" string="Status" 
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>


     <record id="view_patient_queue_kanban" model="ir.ui.view">
        <field name="name">patient.queue.kanban</field>
        <field name="model">patient.queue</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="token_number"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="counter_id"/>
                <field name="position"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="token_number"/>
                                    </strong>
                                </div>
                                <span class="badge badge-pill">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="name"/>
                                <br/>
                                <field name="phone"/>
                                <br/>
                                Counter: <field name="counter_id"/>
                                <br/>
                                Position: <field name="position"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


     <record id="action_patient_queue" model="ir.actions.act_window">
        <field name="name">Patient Queue</field>
        <field name="res_model">patient.queue</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_waiting': 1, 'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient queue entry
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_patient_queue_root" 
              name="Patient Queue" 
              sequence="10"/>
    
    <menuitem id="menu_patient_queue" 
              name="Queue Management" 
              parent="menu_patient_queue_root" 
              action="action_patient_queue" 
              sequence="10"/>
</odoo>